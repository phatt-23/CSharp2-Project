<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="5" -->
    <Style TargetType="Border" x:Key="LightThinBorder">
        <Setter Property="BorderBrush" Value="LightGray"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ErrorMessageBlock">
        <Setter Property="Foreground" Value="Red"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="PaddedBorder" TargetType="Border" BasedOn="{StaticResource LightThinBorder}">
        <Setter Property="Padding" Value="4"/>
    </Style>

</ResourceDictionary>